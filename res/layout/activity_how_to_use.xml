<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/howToUseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HowToUseActivity">

    <TextView
        android:id="@+id/use_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Help Your Choice"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/use_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="결정하는데 시간을 뺏기는\n 여러분들의 선택을 도와드립니다\n"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/use_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="How To Use?"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/use_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="\nStart Button\n 동일 비율 룰렛과 사용자 설정 비율 룰렛 중\n하나를 선택하여 룰렛을 돌릴 수 있습니다.\n\nHistory Button \n  여러분이 저장한 선택지들을 버튼으로 보여줍니다\n선택지를 클릭하면 해당 그룹에 저장된 내용으로\n룰렛이 세팅됩니다 \n\nSetting Button  \n  배경음악, 룰렛 색상, 배경색을 설정할 수 있습니다"
        android:textSize="16sp" />

    <Button
        android:id="@+id/exitBtn_HowToUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="EXIT" />

</LinearLayout>